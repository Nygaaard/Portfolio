@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

</head>

<body>
    <header>
        <div class="above">
            <div class="login-container">
                <i class="fa-regular fa-user"></i>
                <li class="login">
                    <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            </div>
            <i class="fas fa-language"></i>
            <i class="fa-solid fa-circle-half-stroke dark-light"></i>
        </div>
        <div class="under">
            <a asp-asp-controller="Home" asp-action="Index"><img src="images/Logotyp.png" alt="Logotyp"
                    class="logo"></a>
            <nav>
                <ul class="menu">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Index">About</a></li>
                    <li><a asp-controller="Home" asp-action="Index">Skills</a></li>
                    <li><a asp-controller="Home" asp-action="Index">Projects</a></li>
                    <li><a asp-controller="Home" asp-action="Index">Contact</a></li>

                </ul>
            </nav>
        </div>

    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>&copy;Andreas Nygård</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
